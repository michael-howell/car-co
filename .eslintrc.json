{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "plugins": [
        "html"
    ],
    "globals": {
        "__dirname": false,
        "app": false,
        "page": false,
        "Polymer": false,
        "process": false,
        "require": false,
        "suite": false,
        "setup": false,
        "fixture": false,
        "test": false,
        "assert": false
    }
}